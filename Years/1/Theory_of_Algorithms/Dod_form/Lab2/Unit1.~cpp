//---------------------------------------------------------------------------
#include <vcl.h>
#pragma hdrstop
#include "Unit1.h"
#pragma package(smart_init)
#pragma resource "*.dfm"
#include <string>
using namespace std;
//---------------------------------------------------------------------------
int FindCount(string str,string word)//повертаЇ к≥льк≥сть входжень слова word у р€док str
{
  int cnt=0;
  
  if(word!="" && str!="")
    while(str.find(word,0)!=string::npos)
    {
      str=str.substr(str.find(word,0)+word.size(),str.size()-str.find(word,0)+word.size());
      cnt++;
    }
    
  return cnt;  
}
//---------------------------------------------------------------------------
TForm1 *Form1;
//---------------------------------------------------------------------------
__fastcall TForm1::TForm1(TComponent* Owner)
        : TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TForm1::edtWordChange(TObject *Sender)
{
  string str,word;
    
  str=edtStr->Text.c_str();
  word=edtWord->Text.c_str();
    
  lblCount->Caption=IntToStr(FindCount(str,word));  
}
//---------------------------------------------------------------------------
void __fastcall TForm1::edtStrChange(TObject *Sender)
{
  string str,word;
  int cnt=0;
  
  str=edtStr->Text.c_str();
  word=edtWord->Text.c_str();
  
  if(word!="" && str!="")
    while(str.find(word,0)!=string::npos)
    {
      str=str.substr(str.find(word,0)+word.size(),str.size()-str.find(word,0)+word.size());//утворенн€ п≥др€дка ≥з р€дка str починаючи в≥д к≥нц€ входженн€ знайденого слова word в цьому р€дку до к≥нц€ р€дка      
      cnt++;
    }
  
  lblCount->Caption=IntToStr(cnt); 
}
